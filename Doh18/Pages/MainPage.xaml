<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Doh18.Pages.MainPage"
             Title="Welcome">
    <StackLayout Spacing="60" Padding="30,50,30,30" VerticalOptions="StartAndExpand">
        <Image Source="doh18" Aspect="AspectFit" Scale="1.8"/>
        <Label Text="Welcome to DOH18!! :-)" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" FontSize="Large"/>
        <StackLayout Spacing="15">
            <Button Text="Say ciao!" Command="{Binding SayCiaoCommand}" BackgroundColor="{StaticResource LightBlue}" Style="{StaticResource BaseButtonStyle}" />
            <Button Text="Track event" Command="{Binding TrackEventCommand}" BackgroundColor="{StaticResource Teal}" Style="{StaticResource BaseButtonStyle}" />
            <Button Text="Handle me!" Command="{Binding HandleCommand}" BackgroundColor="{StaticResource Indigo}" Style="{StaticResource BaseButtonStyle}" />
            <Button Text="Crash!" Command="{Binding CrashCommand}" BackgroundColor="{StaticResource Pink}" Style="{StaticResource BaseButtonStyle}" />
        </StackLayout>
    </StackLayout>
</ContentPage>